<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.suggs.sandbox.hibernate.caveatEmptor">
	
	<joined-subclass name="BankAccount" extends="BillingDetails" table="CE_BANK_ACCOUNT">
		<!-- key plus foreign key ref-->
		<key column="ID" foreign-key="ID" not-null="true"/>
		<!-- bank name property -->
		<property name="bankName" column="BANK_NAME" type="string" not-null="true"/>
		<!-- bank swift address -->
		<property name="bankSwift" column="BANK_SWIFT" type="string" not-null="true"/>
	</joined-subclass>
	
</hibernate-mapping>
