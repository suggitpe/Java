<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.suggs.sandbox.hibernate.caveatEmptor">
	
	<class name="Bid" table="CE_BID">
		<!-- -->
		<id name="id" column="ID" type="long">
            <generator class="sequence">
                <param name="sequence">CE_BID_SEQ</param>
            </generator>
		</id>
		<!-- bid amount -->
		<property name="amount" column="BID_AMOUNT" type="double" not-null="true"/>
		<!-- created date -->
		<property name="created" column="BID_CREATED" type="timestamp" not-null="true"/>
		<!-- the bid table holds a ref to the item table many bids to one item -->
        <many-to-one name="item" column="BID_ITEM_ID" class="Item" not-null="true"/>
		<!-- bidder property -->
        <one-to-one name="bidder" class="User" foreign-key="BID_USER_ID"/>
	</class>
	
</hibernate-mapping>