<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.suggs.sandbox.hibernate.caveatEmptor">
	
	<class name="Comment" table="CE_COMMENT">
		<!-- default id -->
		<id name="id" column="ID" type="long">
            <generator class="sequence">
                <param name="sequence">CE_COMMENT_SEQ</param>
            </generator>
		</id>
		<!-- rating property -->
		<property name="rating" column="CMNT_RATING" type="integer" not-null="true"/>
		<!-- text property -->
		<property name="text" column="CMNT_TEXT" type="string" not-null="false"/>
		<!-- created property -->
		<property name="created" column="CMNT_CREATED" type="timestamp" not-null="true"/>
		<!-- aboutItem ... locally held ref to the item that the comment is about -->
        <many-to-one name="aboutItem" column="CMNT_ABOUT_ITEM_ID" class="Item" not-null="true"/>
        <!-- fromUser ... locally held ref to the user that craeted the comment -->
        <many-to-one name="fromUser" column="CMNT_FROM_USER_ID" class="User" not-null="true"/>
		
	</class>
	
</hibernate-mapping>