    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.xsl</include>
                    <include>**/*.xsd</include>
                    <include>**/*.sql</include>
                    <include>**/*.properties</include>
                </includes>
            </testResource>
            <testResource>
                <!-- This is needed so that the stories can be used within the jbehave test exec -->
                <directory>src/test/java</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.story</include>
                </includes>
            </testResource>
        </testResources>

        <pluginManagement>
            <plugins>
                <!-- COMPILER PLUGIN -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                    </configuration>
                </plugin>

                <!-- SUREFIRE PLUGIN -->
                <!-- This has been edited such that all standard tests are executed in the test cycle, whereas Integration 
                    Tests are executed after the package phase. -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <useSystemClassLoader>true</useSystemClassLoader>
                        <trimStackTrace>false</trimStackTrace>
                        <argLine>${test.jvm.args}</argLine>
                        <includes>
                            <include>**/*Test.java</include>
                        </includes>
                    </configuration>
                </plugin>

                <!-- SONAR PLUGIN -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>sonar-maven-plugin</artifactId>
                </plugin>

                <!-- JAXB PLUGIN -->
                <plugin>
                    <groupId>org.jvnet.jaxb2.maven2</groupId>
                    <artifactId>maven-jaxb2-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <schemaIncludes>
                            <include>**/*.xsd</include>
                        </schemaIncludes>
                        <schemaExcludes>
                            <exclude>test*.xsd</exclude>
                        </schemaExcludes>
                        <bindingDirectory>src/main/resources</bindingDirectory>
                        <bindingIncludes>
                            <include>*.xjb</include>
                        </bindingIncludes>
                        <generateDirectory>src/main/java</generateDirectory>
                        <forceRegenerate>true</forceRegenerate>
                        <removeOldOutput>true</removeOldOutput>
                        <strict>true</strict>
                        <verbose>false</verbose>
                    </configuration>
                </plugin>

                <!-- FITNESS PLUGIN -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>fitnesse-maven-plugin</artifactId>
                    <configuration>
                        <!-- Fitnesse servers list -->
                        <fitnesses>
                            <fitnesse>
                                <hostName>myServer</hostName>
                                <port>8070</port>
                                <pageName>mySuitePage</pageName>
                            </fitnesse>
                        </fitnesses>
                    </configuration>
                </plugin>

                <!-- JETTY PLUGIN -->
                <plugin>
                    <groupId>org.mortbay.jetty</groupId>
                    <artifactId>maven-jetty-plugin</artifactId>
                    <configuration>
                        <scanIntervalSeconds>10</scanIntervalSeconds>
                        <connectors>
                            <connector implemenation="org.mortbay.jetty.nio.SelectChannelConnector">
                                <port>8072</port>
                                <maxIdleTime>60000</maxIdleTime>
                            </connector>
                        </connectors>
                    </configuration>
                </plugin>

                <!-- JAX-WS PLUGIN -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>jaxws-maven-plugin</artifactId>
                    <configuration>
                        <verbose>true</verbose>
                        <!-- wsimport cfg -->
                        <wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
                        <sourceDestDir>${basedir}/src/main/java</sourceDestDir>
                        <!-- wsgen cfg -->
                        <genWsdl>true</genWsdl>
                        <resourceDestDir>${basedir}/src/main/resources/wsdl</resourceDestDir>
                    </configuration>
                </plugin>

                <!-- WAR PLUGIN -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <configuration>
                        <warSourceDirectory>${basedir}/src/main/resources/webapp</warSourceDirectory>
                    </configuration>
                </plugin>

                <!-- GROOVY PLUGIN -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>groovy-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>generateStubs</goal>
                                <goal>compile</goal>
                                <goal>generateTestStubs</goal>
                                <goal>testCompile</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <debug>false</debug>
                        <verbose>true</verbose>
                        <stacktrace>true</stacktrace>
                        <defaultScriptExtension>.groovy</defaultScriptExtension>
                    </configuration>
                </plugin>

                <!-- EASYB PLUGIN -->
                <plugin>
                    <groupId>org.easyb</groupId>
                    <artifactId>maven-easyb-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>test</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <!-- JBEHAVE -->
                <plugin>
                    <groupId>org.jbehave</groupId>
                    <artifactId>jbehave-maven-plugin</artifactId>
                    <version>${jbehave.version}</version>
                    <!-- <version>3.1-SNAPSHOT</version> -->
                    <executions>
                        <execution>
                            <id>find-and-run-embeddable-stories</id>
                            <phase>integration-test</phase>
                            <configuration>
                                <includes>
                                    <include>**/stories/*.java</include>
                                </includes>
                                <skip>true</skip>
                                <scope>test</scope>
                                <ignoreFailureInStories>false</ignoreFailureInStories>
                                <ignoreFailureInView>false</ignoreFailureInView>
                                <generateViewAfterStories>true</generateViewAfterStories>
                            </configuration>
                            <goals>
                                <goal>run-stories-as-embeddables</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>find-and-run-annotated-stories</id>
                            <phase>integration-test</phase>
                            <configuration>
                                <skip>false</skip>
                                <scope>test</scope>
                                <annotatedEmbedderRunnerClass>org.jbehave.core.junit.AnnotatedEmbedderRunner</annotatedEmbedderRunnerClass>
                                <includes>
                                    <include>**/injectablestories/*.java</include>
                                </includes>
                                <ignoreFailureInStories>false</ignoreFailureInStories>
                                <ignoreFailureInView>false</ignoreFailureInView>
                                <generateViewAfterStories>true</generateViewAfterStories>
                            </configuration>
                            <goals>
                                <goal>run-with-annotated-embedder</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>find-and-run-spring-stories</id>
                            <phase>integration-test</phase>
                            <configuration>
                                <skip>false</skip>
                                <scope>test</scope>
                                <annotatedEmbedderRunnerClass>org.jbehave.core.junit.spring.SpringAnnotatedEmbedderRunner</annotatedEmbedderRunnerClass>
                                <includes>
                                    <include>**/springstories/*.java</include>
                                </includes>
                                <ignoreFailureInStories>false</ignoreFailureInStories>
                                <ignoreFailureInView>false</ignoreFailureInView>
                                <generateViewAfterStories>true</generateViewAfterStories>
                            </configuration>
                            <goals>
                                <goal>run-with-annotated-embedder</goal>
                            </goals>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>log4j</groupId>
                            <artifactId>log4j</artifactId>
                            <version>${log4j.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>org.jbehave</groupId>
                            <artifactId>jbehave-spring</artifactId>
                            <version>${jbehave.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>

                <!-- DEPENDENCY PLUGIN -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>unpack-report-resources</id>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>unpack</goal>
                            </goals>
                            <configuration>
                                <overWriteReleases>false</overWriteReleases>
                                <overWriteSnapshots>true</overWriteSnapshots>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>org.jbehave.site</groupId>
                                        <artifactId>jbehave-site-resources</artifactId>
                                        <version>${jbehave.version}</version>
                                        <type>zip</type>
                                        <outputDirectory>${project.build.directory}/jbehave-reports/view</outputDirectory>
                                    </artifactItem>
                                    <artifactItem>
                                        <groupId>org.jbehave</groupId>
                                        <artifactId>jbehave-core</artifactId>
                                        <version>${jbehave.version}</version>
                                        <classifier>resources</classifier>
                                        <type>zip</type>
                                        <outputDirectory>${project.build.directory}/jbehave-reports/view</outputDirectory>
                                    </artifactItem>
                                </artifactItems>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

            </plugins>
        </pluginManagement>

        <plugins>
            <!-- <plugin> <groupId>org.easyb</groupId> <artifactId>maven-easyb-plugin</artifactId> </plugin> -->
        </plugins>
    </build>

